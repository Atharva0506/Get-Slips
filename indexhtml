    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        var app = angular.module('app', []);
        app.controller('myCtrl', function ($scope, $http) {



            $scope.resetForm = function () {
                var x, y;
                x = $scope.Name;
                y = $scope.Name2;

                $http.get('https://raw.githubusercontent.com/Atharva0506/SYBBA-CA--SEM-3-PRACTICAL-SLIPS/master/' + y + '/' + x).then(function (response) {
                    $scope.data = response.data;

                },
                function error(response) {
                    $scope.err =  " Please Write Slip No with extention ex: slip1.html & make sure first letter is calpital";
                }
                )};




        })
    </script>

